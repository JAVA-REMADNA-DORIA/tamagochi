<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="#000000"
            android:backgroundTint="#000000"
            android:gravity="center"
            android:text="Bonjour, moi c'est Morgana. Tu veux bien jouer avec moi ?"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/happiness"
                android:layout_width="wrap_content"
                android:layout_height="84dp"
                android:layout_weight="1"
                android:gravity="center|center_horizontal"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hungry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />


        </LinearLayout>


        <TextView
            android:id="@+id/money"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:gravity="center|center_horizontal"
            android:text="@string/money"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/tamago"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@null"
            app:srcCompat="@drawable/tamagopersona" />

        <TextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="91dp"
            android:gravity="center|center_horizontal"
            android:text="@string/state_msg"
            android:textColor="#FFFDFD"
            android:textSize="34sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/shop"
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:contentDescription="Boutique"
                android:shadowColor="#FFFFFF"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#000000"
                android:textColorLink="#FF0000"
                app:rippleColor="#FFFFFF"
                app:srcCompat="@drawable/boutique" />

            <ImageButton
                android:id="@+id/inventary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                app:srcCompat="@drawable/inventaire"
                android:contentDescription="inventaire"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#000000"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/gameOne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:src="@drawable/jeux"
                android:contentDescription="jeu 1"/>

            <ImageButton
                android:id="@+id/gameTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#000000"
                android:src="@drawable/jeux"
                android:contentDescription="jeu 2"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>